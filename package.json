{
  "name": "robb-sh-hugo",
  "version": "1.2.0",
  "description": "Website code for https://robb.sh",
  "repository": "gitlab:robb-romans/robb-sh-victor-hugo",
  "bugs": {
    "url": "https://gitlab.com/robb-romans/robb-sh-victor-hugo/-/issues"
  },
  "homepage": "https://robb.sh",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src",
    "start": "run-p start:**",
    "start:hugo": "hugo -d ../dist -s site --verbose --watch",
    "preview": "run-p preview:**",
    "preview:hugo": "npm run start:hugo -- --buildDrafts --buildFuture",
    "prebuild": "rimraf dist",
    "build": "npm run build:hugo",
    "build:preview": "npm run build:hugo:preview",
    "build:hugo": "hugo version && hugo -d ../dist -s site -v",
    "build:hugo:preview": "npm run build:hugo -- --buildDrafts --buildFuture"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.3",
    "@babel/plugin-syntax-object-rest-spread": "^7.8.0",
    "@babel/preset-env": "^7.10.3",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.3.1",
    "hugo-bin": "^0.63.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.0.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2"
  }
}
